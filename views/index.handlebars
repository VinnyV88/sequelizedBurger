<br>
<div class="row">
  <div class="col-md-4">
    <h4>Burger Menu</h4>
    <hr>
    <ul class="list-group">
      {{#each burgers}}
      <li class="list-group-item burger-list">
        <div class="row devour-burger">
          <label class="col-md-7 burger-name" for="eat-qty">{{this.burger_name}} </label>
          <div class="col-md-5">
            <button class="btn btn-warning eat-burger" type="submit" data-burger-id={{this.id}}>Eat (1) Now!</button>
          </div>
        </div>
        <div class="row">
          <div class="col-md-7">
            <label class="burger-order-qty" for="qty">Or Order Here:</label>
          </div>
          <div class="col-md-5 burger-order">
            <input class="burger-id" type="hidden" name="burger-id" value={{this.id}}>
            <input class="col-md-4 form-control burger-qty" type="number" name="qty" placeholder="Quantity?">
          </div>
        </div>
      </li>
      {{/each}}
    </ul>
  </div>
  <div class="col-md-4">
    <h4>Please Enter Your Name</h4>
    <hr>
    <div id="devour-error"></div>
    <form role="form" data-toggle="validator">
      <div class="form-group text-right">
        <input type="text" class="form-control" id="cust-name" name="cust-name" placeholder="Your Name" required data-error="Customer name is required.">
        <div class="help-block with-errors"></div>
        <br>
        <div class="form-group">
          <button type="submit" id="order" class="btn btn-danger">Send Order</button>
        </div>
      </div>
    </form>
    <hr>
    <h4>Add Custom Burger to Menu</h4>
    <hr>
    <form action="/burgers/create" method="POST" role="form" data-toggle="validator">
      <div class="form-group text-right">
        <input type="text" class="form-control" id="burger" name="burger" placeholder="Burger Name" required data-error="Burger name is required.">
        <div class="help-block with-errors"></div>
        <br>
        <div class="form-group">
          <button type="submit" class="btn btn-danger">Add Burger</button>
        </div>
      </div>
    </form>

  </div>

  <div class="col-md-4">
    <h4>Burger Orders</h4>
    <hr>
    <ul class="list-group">
      {{#each orders}} {{#if this.devoured}}
      <li class="list-group-item burger-list">
        <div class="row">
          <div class="col-md-12 order-number">
            Order Number: {{this.id}}
          </div>
        </div>
        <div class="row">
          <div class="col-md-12 burger-name">{{this.Burger.burger_name}} (devoured by {{this.cust_name}}) </div>
        </div>
      </li>
      {{else}}
      <li class="list-group-item burger-list">
        <div class="row">
          <div class="col-md-12 order-number">
            Order Number: {{this.id}}
          </div>
        </div>
        <div class="row">
          <div class="col-md-12 burger-name">{{this.Burger.burger_name}} ({{this.cust_name}} ordered {{this.burger_qty}}) </div>
        </div>
      </li>
      {{/if}} {{/each}}
    </ul>

  </div>
</div>